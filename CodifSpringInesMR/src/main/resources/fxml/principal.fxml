<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.springjavafx.ui.pantallas.principal.PrincipalController">
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="background" BorderPane.alignment="CENTER">
                <children>

                    <TextField fx:id="txtNormal" layoutX="242.0" layoutY="120.0" />
                    <StackPane prefHeight="150.0" prefWidth="200.0" />
                </children>
            </AnchorPane>
        </StackPane>
    </center>
    <top>
        <MenuBar fx:id="menuPrincipal">
            <menus>
                <Menu fx:id="menuAccount" mnemonicParsing="false" text="Account" onAction="#actMenuAccount">
                    <items>
                        <MenuItem fx:id="menuAccountLogout" mnemonicParsing="false" text="Logout" onAction="#actMenuAccount"/>

                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
