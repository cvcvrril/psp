<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.pantallas.principal.PrincipalController">
    <center>
    </center>
    <top>
        <MenuBar fx:id="menuPrincipal">
            <menus>
                <Menu fx:id="menuOptions" mnemonicParsing="false" text="Options" onAction="#actMenuOptions">
                    <items>
                        <MenuItem fx:id="menuOptionsExit" mnemonicParsing="false" onAction="#exit" text="Exit" />
                    </items>
                </Menu>
                <Menu fx:id="menuLlamadas" mnemonicParsing="false" text="Llamadas" onAction="#actMenuLlamadas">
                    <items>
                        <MenuItem fx:id="menuLlamadasPersonajes" mnemonicParsing="false" text="Personajes" onAction="#actMenuLlamadas"/>
                        <MenuItem fx:id="menuLlamadasLugares" mnemonicParsing="false" text="Lugares" onAction="#actMenuLlamadas"/>
                        <MenuItem fx:id="menuLlamadasEpisodios" mnemonicParsing="false" text="Episodios" onAction="#actMenuLlamadas"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
